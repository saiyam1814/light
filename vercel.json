{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/game.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/game.js" },
    { "src": "/presenter(.*)", "dest": "/public/presenter.html" },
    { "src": "/(.*\\..*)", "dest": "/public/$1" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}
